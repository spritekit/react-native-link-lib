# 示例 Podfile 配置
# 在使用 react-native-link-lib 时，需要在项目的 Podfile 中配置本地依赖路径

require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '11.0'
install! 'cocoapods', :deterministic_uuids => false

target 'YourAppName' do
  config = use_native_modules!

  # React Native 核心
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => false
  )

  # react-native-link-lib 本身
  pod 'react-native-link-lib', :path => '../node_modules/react-native-link-lib'

  # 配置 react-native-link-lib 的依赖路径
  # 注意：路径需要根据你的项目结构调整
  pod 'RNCAsyncStorage', :path => '../node_modules/@react-native-async-storage/async-storage'
  pod 'RNCPicker', :path => '../node_modules/@react-native-picker/picker'
  pod 'FlashList', :path => '../node_modules/@shopify/flash-list'
  pod 'RNAudioRecorderPlayer', :path => '../node_modules/react-native-audio-recorder-player'
  pod 'RNFastImage', :path => '../node_modules/react-native-fast-image'
  pod 'BVLinearGradient', :path => '../node_modules/react-native-linear-gradient'
  pod 'react-native-pager-view', :path => '../node_modules/react-native-pager-view'
  pod 'react-native-safe-area-context', :path => '../node_modules/react-native-safe-area-context'
  pod 'RNScreens', :path => '../node_modules/react-native-screens'
  pod 'RNSVG', :path => '../node_modules/react-native-svg'
  pod 'react-native-video', :path => '../node_modules/react-native-video'
  pod 'RNViewShot', :path => '../node_modules/react-native-view-shot'
  pod 'react-native-webview', :path => '../node_modules/react-native-webview'

  target 'YourAppNameTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    react_native_post_install(installer)
    __apply_Xcode_12_5_M1_post_install_workaround(installer)
  end
end