{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**", "**/*.test.*", "**/*.spec.*", "dist", "node_modules"]
}